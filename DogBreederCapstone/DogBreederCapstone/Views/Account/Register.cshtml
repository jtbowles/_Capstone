@model DogBreederCapstone.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>
    hr.border {
        border: 5px outset #B2D7F7;
        border-radius: 2.5px;
    }

    hr.border-sm {
        border: 1px solid #B2D7F7;
        box-shadow: 0 2px 2px #19334d;
        border-radius: 2.5px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
    }

    .btn-sm:hover {
        background-color: #19334d;
    }

    .btn-sm {
      display: block;
      width: 80%;
      padding: 14px 28px;
      font-size: 16px;
      cursor: pointer;
      text-align: center;
    }

    h4.custom {
        text-align: center;
        padding-bottom: 15px;
    }

    div.offset {
        margin-left: 10px;
    }

</style>
<br />
<h2>@ViewBag.Title</h2>
<hr class="border" />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="center">
        @Html.AntiForgeryToken()
        <h4 class="custom">Create a new account.</h4>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })
            <div class="col-md-7">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-5 control-label" })
            <div class="col-md-7">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
            <div class="col-md-7">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
            <div class="col-md-7">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" id="offset">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" class="btn btn-sm" value="Register" />
            </div>
        </div>
    </div>
}
<hr class="border-sm" />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
