
@{
    ViewBag.Title = "AdoptionDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .well {
        height: 60px;
        width: auto;
        margin-left: 5.5%;
        margin-right: 5.5%;
        background-color: #c9edff;
        text-align: center;
        padding-top: 20px;
        color: black;
        border: 1px solid #eee;
        box-shadow: 0 2px 2px #ccc;
        font-family: Trebuchet MS, Helvetica, sans-serif;

    }

    hr.border {
        border: 4px outset #c9edff;
        border-radius: 2.5px;
    }

    hr.border-sm {
        border: 1px solid #c9edff;
        box-shadow: 0 2px 2px #19334d;
        border-radius: 2.5px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        font-family: Trebuchet MS, Helvetica, sans-serif;
    }


    h5.well {
        font-style: oblique;
        font-weight: bold;
        font-size: medium;
    }

    div.col-md-6, div.col-md-4 {
        padding-bottom: 7.5px;
    }

    div.col-md-12 {
        padding-bottom: 7.5px;
    }

    div.col-container {
        display: table;
        width: 100%;
    }

    ul.bullet {
        list-style-type: circle;
    }

    .btn-sm:hover {
        background-color: #19334d;
    }

    .btn-sm {
      display: block;
      width: 80%;
      padding: 14px 28px;
      font-size: 16px;
      cursor: pointer;
      text-align: center;
    }
</style>

<br />
<h2>Adoption 101</h2>
<hr class="border" />
<h5 class="well">~ Interested in a Doggo? Follow the steps below and you'll be on your way to owning a Doggo in no time!</h5>
<hr class="border-sm" />

<div class="col-container">
    <div class="col-md-6">
        <h5>Step 1: Sign up and register an account as a Potential Owner</h5>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-4" style="text-align: center;">
        <input type="button" class="btn btn-sm" value="Sign Up" onclick="location.href = '@Url.Action("Register","Account")'" />
    </div>
</div>

<div class="col-container">
    <div class="col-md-6">
        <h5>Step 2: Fill out an application</h5>
    </div>
    <div class="col-md-6" style="text-align: center;">
        <input type="button" class="btn btn-sm" value="Application Form" onclick="location.href = '@Url.Action("Login","Account")'" />
    </div>
</div>


<div class="col-container">
    <div class="col-md-6">
        <h5>Step 3: Qualify and get approved</h5>
    </div>
    <div class="col-md-6" style="text-align: center;">
        <input type="button" class="btn btn-sm" value="Check Status" onclick="location.href = '@Url.Action("Login","Account")'" />
    </div>

</div>

<div class="col-container">
    <div class="col-md-6">
        <h5>Step 4: Make a down payment and reserve the puppy from the litter you want</h5>
    </div>
    <div class="col-md-6" style="text-align: center;">
        <input type="button" class="btn btn-sm" value="Reserve Spot" onclick="location.href = '@Url.Action("Login","Account")'" />
    </div>

</div>

<hr class="border-sm" />

<div class="col-container" style="padding-left:80px;">
    <div class="col-lg-12">
        <h4 style="font-weight:bold;">Your puppy comes with:</h4>
    </div>
</div>

<div class="col-md-6" style="padding-left:100px;">
    <ul class="bullet">
        <li>Vetrinary health check</li>
        <li>A spay/neuter agreement</li>
        <li>Micro chip</li>
        <li>Current vaccination and deworming</li>
        <li>Generation Pedigree</li>
        <li>2 year genetic health warranty</li>
        <li>Puppy kit</li>
        <li>Go home training video</li>
    </ul>
</div>

<div class="col-md-6" style="padding-left:10px; padding-bottom:50px;">
    <img src="http://nebula.wsimg.com/cc0a501bffd5dcac56cdea43b33b137a?AccessKeyId=06C2760C54BF9250F233&disposition=0&alloworigin=1" style="height:200px; width:350px; border: 10px groove #19334d; border-radius:5px;" alt="W3Schools.com">
</div>

<hr class="border-sm" />