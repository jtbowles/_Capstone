
@{
    ViewBag.Title = "AdoptionDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    hr.border {
        border: 5px outset #B2D7F7;
        border-radius: 2.5px;
    }

    div.col-md-6 {
        padding-bottom: 7.5px;
    }

    div.col-md-12 {
        padding-bottom: 7.5px;
    }

    div.col-container {
        display: table;
        width: 100%;
    }

    ul.bullet {
        list-style-type: circle;
    }
</style>

<br />
<h2 style="text-align:center">Adoption 101</h2>
<hr class="border" />

<div class="col-container">
    <div class="col-md-6">
        <h5>Step 1: Sign up and register an account as a Potential Owner</h5>
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-sm" value="Sign Up" onclick="location.href = '@Url.Action("Register","Account")'" />
    </div>
</div>

<div class="col-container">
    <div class="col-md-6">
        <h5>Step 2: Fill out an application</h5>
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-sm" value="Application Form" onclick="location.href = '@Url.Action("Index","Home")'" />
    </div>
</div>


<div class="col-container">
    <div class="col-md-6">
        <h5>Step 3: Qualify and get approved</h5>
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-sm" value="Check Status" onclick="location.href = '@Url.Action("Index","Home")'" />
    </div>

</div>

<div class="col-container">
    <div class="col-md-6">
        <h5>Step 4: Make a down payment and reserve the puppy from the litter you want</h5>
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-sm" value="Reserve Spot" onclick="location.href = '@Url.Action("Index","Home")'" />
    </div>

</div>

<hr class="border" />

<div class="col-container" style="padding-left:80px;">
    <div class="col-lg-12">
        <h4 style="font-weight:bold;">Your puppy comes with:</h4>
    </div>
</div>

<div class="col-md-6" style="padding-left:100px;">
    <ul class="bullet">
        <li>Vetrinary health check</li>
        <li>A spay/neuter agreement</li>
        <li>Micro chip</li>
        <li>Current vaccination and deworming</li>
        <li>Generation Pedigree</li>
        <li>2 year genetic health warranty</li>
        <li>Puppy kit</li>
        <li>Go home training video</li>
    </ul>
</div>

<div class="col-md-6" style="padding-left:100px;">
    <img src="http://nebula.wsimg.com/cc0a501bffd5dcac56cdea43b33b137a?AccessKeyId=06C2760C54BF9250F233&disposition=0&alloworigin=1" style="height:200px; width:350px; padding-right:50px; border: 10px groove #19334d; border-radius:5px;" alt="W3Schools.com">
</div>