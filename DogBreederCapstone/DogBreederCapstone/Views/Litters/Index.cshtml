@model IEnumerable<DogBreederCapstone.Models.Litter>

@{
    ViewBag.Title = "Litters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Litters</h2>

@if (!Model.Any())
{
    <h3>We don't have any litters yet.</h3>
}
else
{
    <table id="litters" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CoatId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SizeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SendHomeDate)
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coat.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SendHomeDate)
                    </td>
                    <td>
                        <button data-litter-id="@item.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
             }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#litters .js-delete").on("click", function () {
                var button = $(this);

                if (confirm("Are you sure you want to delete this Litter?")) {
                    $.ajax({
                        url: "/api/litters/" + $(this).attr("data-litter-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    })
                }
            });
        });
    </script>
}


