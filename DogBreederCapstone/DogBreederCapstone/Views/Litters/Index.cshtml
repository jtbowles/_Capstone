@section scripts
{
    <script>
        $(document).ready(function () {
            $("#litters").DataTable({
                ajax: {
                    url: "/api/litters",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, litter) {
                            return "<a href='/litters/edit" + litter.id + "'>" + litter.name + "</a>";
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-litter-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#litters").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this litter?", function (result) {
                    $.ajax({
                        url: "/api/litters/" + $(this).attr("data-litter-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    });
                });
            });
        });
    </script>
