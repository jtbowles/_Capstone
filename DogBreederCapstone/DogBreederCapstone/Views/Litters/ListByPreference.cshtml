@model IEnumerable<DogBreederCapstone.Models.Litter>

@{
    ViewBag.Title = "ListByPreference";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Litters by your Preferences</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coat.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SendHomeDate)
            </th>
            <th>View Dogs</th>
            <th>Watch</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coat.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SendHomeDate)
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Dogs" onclick="location.href = '@Url.Action("GetDogsFromLitter", "Litters", new {id = item.Id}, null)'"/>
                </td>
                <td>
                    <input type="button" class="btn btn-info" value="Watch" onclick="location.href = '@Url.Action("SelectWatchLitter", "PotentialOwners", new {id = item.Id}, null)'"/>
                </td>
            </tr>
        }
    </tbody>
</table>
