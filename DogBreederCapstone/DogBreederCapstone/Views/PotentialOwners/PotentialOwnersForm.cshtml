@model DogBreederCapstone.Models.PotentialOwner

@{
    ViewBag.Title = "PotentialOwnersForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Info Form</h2>

@using (Html.BeginForm("Save", "PotentialOwners"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Id);
    @Html.HiddenFor(m => m.PreferenceId);
    <button type="submit" class="btn btn-primary">Finish</button>
}

